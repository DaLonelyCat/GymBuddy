<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/deepspace"
    tools:context=".EquipmentPage">

<!--Top Title Section-->
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:gravity="center_horizontal"
            android:paddingTop="50dp"
            android:text="Select Equipment"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>

<!--Bottom Next Prev Button-->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/btnBack1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="#F25912"
            android:text="Back"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnNext1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text="Continue"
            android:backgroundTint="#5C3E94"
            android:textColor="#FFFFFF" />

    </LinearLayout>

<!--Grid items-->
    <GridLayout
        android:id="@+id/muscleSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:columnCount="2"
        android:rowCount="3"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/advMLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/advMachine"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/advnmachine"
                android:background="@drawable/backgroundbox"
                android:padding="10dp"/>

            <CheckBox
                android:id="@+id/cbAdvancedMachine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto"
                android:text="Advanced Machine"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bscMachineLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/bscMachine"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/bscmachine"
                android:background="@drawable/backgroundbox"
                android:padding="10dp"/>

            <CheckBox
                android:id="@+id/cbBasicMachine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto"
                android:text="Basic Machine"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dumbbellLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/dumbbellimg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/dumbbell"
                android:background="@drawable/backgroundbox"
                android:padding="10dp"/>
            <CheckBox
                android:id="@+id/cbDumbell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto"
                android:text="Dumbell"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/barbellLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/barbellimg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/barbell"
                android:background="@drawable/backgroundbox"
                android:padding="10dp"/>
            <CheckBox
                android:id="@+id/cbBarbell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto"
                android:text="Barbell"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/benchLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/benchimg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/bench"
                android:background="@drawable/backgroundbox"
                android:padding="10dp"/>
            <CheckBox
                android:id="@+id/cbBench"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto"
                android:text="Bench"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bodyweightLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/bodyWeighimg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/bodyweight"
                android:background="@drawable/backgroundbox"
                android:padding="10dp"/>
            <CheckBox
                android:id="@+id/cbBodyWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto"
                android:text="Body Weight"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>


    </GridLayout>

</RelativeLayout>