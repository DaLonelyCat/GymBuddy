<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFECE3"
    tools:context=".EquipmentPage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select available equipment"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alignmentMode="alignBounds"
        android:layout_gravity="center_horizontal"
        android:columnCount="2"
        android:rowCount="3"
        android:useDefaultMargins="true">

        <LinearLayout
            android:id="@+id/advMLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/advMachine"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/advnmachine"
                android:background="@drawable/backgroundbox"
                android:padding="10dp"/>

            <CheckBox
                android:id="@+id/cbAdvancedMachine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto"
                android:text="Advanced Machine"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bscMachineLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/bscMachine"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/bscmachine"
                android:background="@drawable/backgroundbox"
                android:padding="10dp"/>

            <CheckBox
                android:id="@+id/cbBasicMachine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto"
                android:text="Basic Machine"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dumbbellLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/dumbbellimg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/dumbbell"
                android:background="@drawable/backgroundbox"
                android:padding="10dp"/>
            <CheckBox
                android:id="@+id/cbDumbell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto"
                android:text="Dumbell"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/barbellLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/barbellimg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/barbell"
                android:background="@drawable/backgroundbox"
                android:padding="10dp"/>
            <CheckBox
                android:id="@+id/cbBarbell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto"
                android:text="Barbell"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/benchLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/benchimg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/bench"
                android:background="@drawable/backgroundbox"
                android:padding="10dp"/>
            <CheckBox
                android:id="@+id/cbBench"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto"
                android:text="Bench"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bodyweightLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/bodyWeighimg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/bodyweight"
                android:background="@drawable/backgroundbox"
                android:padding="10dp"/>
            <CheckBox
                android:id="@+id/cbBodyWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto"
                android:text="Body Weight"
                android:textStyle="bold" />

        </LinearLayout>


    </GridLayout>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/btnBack1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:text="Back"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnNext1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text="Continue"
            android:textColor="#FFFFFF" />

    </LinearLayout>


</LinearLayout>