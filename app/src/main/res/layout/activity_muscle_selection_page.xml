<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MuscleSelectionPage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select muscles
        to train"
        android:textSize="50sp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="50dp"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alignmentMode="alignBounds"
        android:layout_gravity="center_horizontal"
        android:columnCount="2"
        android:rowCount="3"
        android:useDefaultMargins="true">

        <LinearLayout
            android:id="@+id/advMLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/advMachine"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/advanceMachine"
                android:background="@drawable/backgroundbox"
                android:padding="10dp"
                android:onClick="AmSelect"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto"
                android:text="Advanced Machine"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bscMachineLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/bscMachine"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/basicMachine"
                android:background="@drawable/backgroundbox"
                android:padding="10dp"
                android:onClick="bscMchnSelect"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto"
                android:text="Basic Machine"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dumbbellLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/advMachine"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/dumbbell"
                android:background="@drawable/backgroundbox"
                android:padding="10dp"
                android:onClick="AmSelect"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dumbbell"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/barbellLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/advMachine"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/barbell"
                android:background="@drawable/backgroundbox"
                android:padding="10dp"
                android:onClick="AmSelect"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barbell"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/benchLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/advMachine"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/bench"
                android:background="@drawable/backgroundbox"
                android:padding="10dp"
                android:onClick="AmSelect"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bench"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bodyweightLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/advMachine"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/bodyweight"
                android:background="@drawable/backgroundbox"
                android:padding="10dp"
                android:onClick="AmSelect"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bodyweight"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"/>

        </LinearLayout>

    </GridLayout>

</LinearLayout>